{% extends '::base.html.twig' %}

{% block title %}Liste de course{% endblock %}

{% block body %}
  <h1>Liste de course</h1>
  <div class="row">
    <div class="col-md-6">
      <ul>
        {% for ingredient in liste.ingredients %}
          <li>{{ ingredient.quantite }} {{ ingredient.ingredient.nom }} de {{ ingredient.ingredient.unite.nom }} </li>
        {% endfor %}
      </ul>
    </div>
    <div class="col-md-6">
      <ul>
        {% for produit in liste.produits %}
          <li>{{ produit.quantite }} {{ produit.produit.nom }} de {{ produit.produit.unite.nom }} </li>
        {% endfor %}
      </ul>
    </div>
  </div>
{% endblock %}
