<td {% if entree is null %}class="danger"{% endif %}>
  {% if entree is null %}
    <a href="{{ path('ajouter_entree_planning', {'date': dateDuJour, 'repas': repas}) }}">
      Ajouter le repas
    </a>
  {% else %}

    <dl class="dl-horizontal">
    {% for recette in entree.recettes %}
        <dt>{{ recette.categorieRecette.nom }}</dt>
        <dd>
          <a href="{{ path('voir_recette', {'slug': recette.slug}) }}">
            {{ recette.nom }}
          </a>
        </dd>
    {% endfor %}
    </dl>
  {% endif %}
</td>
