{% block quantite_produit_widget %}
    <div class="row">
      <div class="col-md-9">
        <div class="form-inline">
          <div class="form-group">{{ form_widget(form.produit) }}</div>
          <div class="form-group">{{ form_widget(form.quantite, {'attr': {'class': 'quantite'}}) }}</div>
          <div class="form-group">{{ form_widget(form.unite) }}</div>
        </div>
      </div>
      {% include '::admin/liste-de-course/boutons.html.twig' %}
    </div>
{% endblock %}


