{% extends '::base.html.twig' %}

{% block title %}{{ action }} un repas au planning{% endblock %}

{% block body %}
<div class="row">
  <div class="col-md-6 col-md-offset-3 well">
    {{ entreePlanning.date|localizeddate('medium', 'none') }}
    <h1>{{ action }} un repas au planning</h1>
    {{ form_start(form, {'style': 'horizontal'}) }}
      {{ form_row(form.recettes) }}
      <input type="submit" value="Valider" class="btn btn-primary"/>
